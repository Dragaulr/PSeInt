Algoritmo sin_titulo
	definir dia como entero;
	escribir "dime un numero entre 1 y 7";
	leer dia;
	Segun dia Hacer
		1:
			escribir "es lunes";
		2:
			escribir "es martes";

		3:
			escribir "es miercoles";
		4:
			escribir "es jueves";
			
		5:
			escribir "es viernes";
		6:
			escribir "es sabado";
		7:
			escribir "es domingo";


		De Otro Modo:
			escribir "te has equivocado";
	Fin Segun
FinAlgoritmo
